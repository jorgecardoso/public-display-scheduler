{
  "name": "PD Scheduler.",
  "version": "0.1",
  "options_page": "options.html",
  "background": { 
  	 "page": "background.html" 
  	},
  "permissions": [
    "tabs", "http://*/*", "https://*/*", "file://*/*"],
  "browser_action": {
      "default_icon": "icon3.png", 
      "name": "Start/Stop"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://pd-player.appspot.com; object-src 'self'"
}

